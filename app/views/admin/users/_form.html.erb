<%= form_for([:admin, user]) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation" class="notification is-danger">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email, 'Correo', class: 'label' %>
    <div class="control">
      <%= f.text_field :email, id: :user_email, class: 'input' %>
    </div>
  </div>

  <div class="field">
   <%= f.label :password, 'Contraseña', class: 'label' %>
   <div class="control">
     <%= f.password_field :password, class: 'input' %>
   </div>
  </div>
  
  <div class="field">
     <%= f.label :password_confirmation, 'Confirmación de contraseña', class: 'label' %>
     <div class="control">
       <%= f.password_field :password_confirmation, class: 'input' %>
     </div>
  </div>

  <div class="actions">
    <%= f.submit 'Guardar', class: 'button is-primary' %>
  </div>
<% end %>
