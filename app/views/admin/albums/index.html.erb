<h1 class="is-size-3">Listado de albumes</h1>

<br>

<div class="table-container">
  <table class="table is-fullwidth">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Fecha de creación</th>
        <th>Número de fotos</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @albums.each do |album| %>
        <tr>
          <td><%= album.name %></td>
          <td><%= album.description %></td>
          <td><%= album.created_at %></td>
          <td><%= album.photos.count %></td>
          <td><%= link_to 'Ver', admin_album_path(album) %></td>
          <td><%= link_to 'Editar', edit_admin_album_path(album) %></td>
          <td><%= link_to 'Eliminar', admin_album_path(album), method: :delete, data: { confirm: 'Estás seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'Agregar album nuevo', new_admin_album_path, class: 'button is-primary' %>
