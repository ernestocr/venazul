<div class="columns">
  <div class="column is-one-third is-offset-one-third">
    <h1 class="is-size-4 has-text-centered">Inicia sesión</h1>
    <br>

    <%= form_tag admin_sessions_path, :method => :post do %>
      <div class="field">
        <%= label_tag :email, 'Correo', class: 'label' %>
        <div class="control">
          <%= text_field_tag :email, '', class: 'input' %>
        </div>
      </div>
      <div class="field">
        <%= label_tag :password, 'Contraseña', class: 'label' %>
        <div class="control">
          <%= password_field_tag :password, '', class: 'input' %>
        </div>
      </div>
      <div class="actions">
        <%= submit_tag "Login", class: 'button is-primary' %>
      </div>
    <% end %>
  </div>
</div>