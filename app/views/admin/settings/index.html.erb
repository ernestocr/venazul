<h1 class="is-size-4">Configuración</h1>

<br>

<div class="settings columns">
	<div class="column">
		<%= form_for([:admin, @settings]) do |f| %>
			<div class="field">
				<label class="label">Foto de inicio</label>
				<%= image_tag @settings.home_photo if @settings.home_photo? %>
				<%= f.file_field :home_photo %>
				<%= f.hidden_field :home_photo_cache %>
			</div>
			<div class="field">
				<div class="control">
					<label class="label">Texto "Nosotros"</label>
					<%= f.text_area :home_text, class: 'textarea', rows: '10' %>
				</div>
			</div>
			<div class="field">
				<div class="control">
					<label class="label">Domicilio</label>
					<%= f.text_field :address, class: 'input' %>
				</div>
			</div>
			<div class="field">
				<div class="control">
					<label class="label">Teléfono</label>
					<%= f.text_field :telephone, class: 'input' %>
				</div>
			</div>
			<div class="field">
				<div class="control">
					<label class="label">Página de instagram</label>
					<%= f.text_field :instagram, class: 'input' %>
				</div>
			</div>
			<div class="field">
				<div class="control">
					<label class="label">Página de facebook</label>
					<%= f.text_field :facebook, class: 'input' %>
				</div>
			</div>
			<div class="field">
				<div class="control">
					<label class="label">Página de V?</label>
					<%= f.text_field :vsite, class: 'input' %>
				</div>
			</div>
			<div class="field">
				<%= f.submit 'Guardar', class: 'button is-primary' %>
			</div>
		<% end %>
	</div>
	<div class="column"></div>
</div>