<!DOCTYPE html>
<html>
  <head>
    <title>Venazul - ADMIN</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'bulma', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container is-fluid">
      <%= render 'layouts/admin_nav' %>
      <br>

      <% if flash[:notice] %>
        <p class="notification is-warning" id="notice"><%= flash[:notice] %></p>
        <br>
      <% elsif flash[:alert] %>
        <p class="notification is-danger" id="alert"><%= flash[:alert] %></p>
        <br>
      <% end %>

      <%= yield %>
    </div>
    <br>
    <br>
  </body>
</html>
